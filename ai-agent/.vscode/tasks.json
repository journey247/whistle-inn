{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Admin Assistant",
            "type": "shell",
            "command": "python",
            "args": [
                "admin_assistant.py"
            ],
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/ai-agent"
            },
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": "^.*$",
                        "file": 0,
                        "location": 1,
                        "message": 2
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": "Starting OpenRouter-based Admin Assistant"
                }
            }
        },
        {
            "label": "Debug Admin Assistant",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "debugpy",
                "--listen",
                "127.0.0.1:5679",
                "admin_assistant.py"
            ],
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/ai-agent"
            },
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": "^.*$",
                        "file": 0,
                        "location": 1,
                        "message": 2
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": "Starting OpenRouter-based Admin Assistant"
                }
            }
        },
        {
            "label": "Terminate All Tasks",
            "command": "echo ${input:terminate}",
            "type": "shell",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "terminate",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "terminateAll"
        }
    ]
}