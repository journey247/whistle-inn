// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BookingStatus {
  pending
  paid
  cancelled
}

model Booking {
  id         String        @id @default(uuid())
  startDate  DateTime
  endDate    DateTime
  guestName  String
  email      String
  totalPrice Float
  status     BookingStatus @default(pending)
  stripeSessionId String?   @unique
  stripePaymentIntentId String?
  notes      String?       // admin notes
  guestCount Int           @default(1)
  discount   Float         @default(0)
  couponId   String?
  coupon     Coupon?       @relation(fields: [couponId], references: [id])
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
}

model Subscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
}

model ExternalBooking {
  id          String   @id @default(cuid())
  source      String   // "Airbnb", "VRBO", etc.
  guestName   String
  startDate   DateTime
  endDate     DateTime
  notes       String?
  createdAt   DateTime @default(now())
}

model ICalFeed {
  id        String   @id @default(cuid())
  name      String   // Display name for the feed
  url       String   @unique // iCal URL
  source    String   // "Airbnb", "VRBO", etc.
  lastSync  DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// New admin and logging models
model AdminUser {
  id             String   @id @default(cuid())
  email          String   @unique
  hashedPassword String
  role           String?
  createdAt      DateTime @default(now())
}

model EmailLog {
  id        String   @id @default(cuid())
  to        String
  subject   String
  body      String
  template  String?
  bookingId String?
  createdAt DateTime @default(now())
}

model SmsLog {
  id        String   @id @default(cuid())
  to        String
  body      String
  type      String?
  bookingId String?
  createdAt DateTime @default(now())
}

model NotificationPreference {
  id        String   @id @default(cuid())
  adminId   String?
  enabled   Boolean  @default(true)
  events    String[] // e.g., ["booking.created","booking.paid"]
  createdAt DateTime @default(now())
}

model EmailTemplate {
  id        String   @id @default(cuid())
  name      String   @unique
  subject   String
  body      String   // HTML template with placeholders like {{guestName}}, {{startDate}}
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Phase 2: Pricing & Promotions
model Coupon {
  id          String   @id @default(cuid())
  code        String   @unique
  discountType String  // 'PERCENT', 'FIXED'
  value       Float    // 10.0 (for 10% or )
  validFrom   DateTime?
  validUntil  DateTime?
  maxUses     Int?
  usedCount   Int      @default(0)
  isActive    Boolean  @default(true)
  bookings    Booking[]
  createdAt   DateTime @default(now())
}

model SpecialRate {
  id          String   @id @default(cuid())
  label       String?   // e.g. 'Peak Season'
  startDate   DateTime
  endDate     DateTime
  pricePerNight Float? // Overrides base price
  multiplier  Float?   // e.g., 1.5x regular price
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Phase 3: Content Management
model ContentBlock {
  key       String   @id
  value     String
  label     String
  type      String   // "text", "textarea", "image_url", "markdown"
  section   String   // "Hero Section", "About Section"
  category  String   // "Home"
  updatedAt DateTime @updatedAt
}

