# Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

DATABASE_URL="postgresql://username:password@hostname:5432/database?sslmode=require"

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# EMAIL SERVICE
# =============================================================================

# Resend Configuration (for transactional emails)
RESEND_API_KEY=re_your_resend_api_key
NEXT_PUBLIC_RESEND_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================

# Admin Panel Access
NEXT_PUBLIC_ADMIN_PASSWORD=your_secure_admin_password

# =============================================================================
# DEPLOYMENT & INFRASTRUCTURE
# =============================================================================

# Vercel Configuration (automatically set in production)
VERCEL_URL=https://your-app.vercel.app
VERCEL_ENV=production
VERCEL_GIT_COMMIT_SHA=your_commit_sha

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS=true

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Next.js Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Debug Mode
DEBUG=false
NEXT_PUBLIC_DEBUG=false

# =============================================================================
# EXTERNAL API KEYS (Optional - for future features)
# =============================================================================

# Airbnb API (if we implement direct API integration later)
AIRBNB_API_KEY=your_airbnb_api_key
AIRBNB_CLIENT_ID=your_airbnb_client_id

# VRBO API (if we implement direct API integration later)
VRBO_API_KEY=your_vrbo_api_key

# Google Maps API (for location features)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# OpenAI API (for AI features like chatbots)
OPENAI_API_KEY=your_openai_api_key

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# NextAuth.js Configuration (if we add user authentication)
NEXTAUTH_SECRET=your-nextauth-secret-key-here
NEXTAUTH_URL=https://your-app.vercel.app

# JWT Secret (alternative to NextAuth)
JWT_SECRET=your-jwt-secret-here

# =============================================================================
# FILE STORAGE (Optional - for image uploads)
# =============================================================================

# Cloudinary (for image storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# AWS S3 (alternative file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET_NAME=your_bucket_name
AWS_REGION=us-east-1